<% content_for :page_title, "AI Data Studio" %>
<% content_for :page_subtitle, "Natural language analytics" %>

<div class="max-w-4xl mx-auto space-y-6" data-controller="ai">
  
  <!-- AI Input Card -->
  <div class="glass-card p-2">
    <form data-action="submit->ai#submit" onsubmit="return false;" class="relative flex items-center">
      <!-- Icon -->
      <div class="absolute left-5 text-primary">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      
      <!-- Input -->
      <input 
        data-ai-target="prompt"
        type="text" 
        placeholder="Ask anything about your store data..." 
        class="w-full bg-transparent text-foreground placeholder-muted-foreground text-base px-14 py-5 border-none focus:ring-0 focus:outline-none"
        autocomplete="off"
      >
      
      <!-- Submit -->
      <button type="submit" class="absolute right-3 btn-primary p-3">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </button>
    </form>
  </div>

  <!-- Quick Suggestions -->
  <div class="flex flex-wrap gap-2">
    <span class="text-xs text-muted-foreground font-medium mr-2">Try asking:</span>
    <button type="button" data-action="click->ai#suggest" class="badge hover:bg-primary/10 hover:text-primary hover:border-primary/30 transition-all cursor-pointer">
      What's my revenue this week?
    </button>
    <button type="button" data-action="click->ai#suggest" class="badge hover:bg-primary/10 hover:text-primary hover:border-primary/30 transition-all cursor-pointer">
      Who are my top customers?
    </button>
    <button type="button" data-action="click->ai#suggest" class="badge hover:bg-primary/10 hover:text-primary hover:border-primary/30 transition-all cursor-pointer">
      Show order trends
    </button>
  </div>

  <!-- Response Area -->
  <div class="space-y-6 hidden" data-ai-target="response" style="display: none;">
    
    <!-- AI Analysis -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-primary/20 rounded-xl flex items-center justify-center border border-primary/30">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-foreground">AI Analysis</h3>
          <p class="text-xs text-muted-foreground">Powered by XenoInsights</p>
        </div>
      </div>
      <p data-ai-target="answer" class="text-base text-foreground leading-relaxed"></p>
    </div>

    <!-- Data Visualization -->
    <div class="card p-6">
      <h3 class="section-subtitle mb-4">Data Result</h3>
      <div data-ai-target="visualization" class="bg-secondary rounded-xl p-4 border border-border font-mono text-sm text-muted-foreground overflow-x-auto">
        <!-- Data will appear here -->
      </div>
    </div>
  </div>

  <!-- Features Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
    <div class="card p-5">
      <div class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center mb-4 border border-primary/20">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
      </div>
      <h4 class="text-sm font-semibold text-foreground mb-1">Revenue Insights</h4>
      <p class="text-xs text-muted-foreground">Ask about revenue trends, comparisons, and forecasts</p>
    </div>
    
    <div class="card p-5">
      <div class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center mb-4 border border-primary/20">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <h4 class="text-sm font-semibold text-foreground mb-1">Customer Analytics</h4>
      <p class="text-xs text-muted-foreground">Discover top customers and buying patterns</p>
    </div>
    
    <div class="card p-5">
      <div class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center mb-4 border border-primary/20">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
      </div>
      <h4 class="text-sm font-semibold text-foreground mb-1">Order Analysis</h4>
      <p class="text-xs text-muted-foreground">Track order volume and product performance</p>
    </div>
  </div>
</div>