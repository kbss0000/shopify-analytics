<!-- Sidebar -->
<aside class="h-full bg-card/95 backdrop-blur-xl border-r border-border flex flex-col">
  
  <!-- Logo -->
  <div class="h-20 flex items-center px-6 border-b border-border">
    <%= link_to root_path, class: "flex items-center gap-3 group" do %>
      <div class="w-10 h-10 bg-gradient-to-br from-primary to-primary/80 rounded-xl flex items-center justify-center shadow-glow">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      <div>
        <span class="text-lg font-bold text-foreground">XenoInsights</span>
        <p class="text-[10px] text-muted-foreground font-medium tracking-wider uppercase">Analytics</p>
      </div>
    <% end %>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-6 space-y-8 overflow-y-auto no-scrollbar">
    
    <!-- Overview -->
    <div>
      <p class="px-4 mb-3 text-[10px] font-bold text-muted-foreground uppercase tracking-widest">Overview</p>
      <div class="space-y-1">
        <%= link_to dashboard_path, class: "nav-link #{current_page?(dashboard_path) ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
          </svg>
          <span>Dashboard</span>
        <% end %>

        <%= link_to ai_path, class: "nav-link #{current_page?(ai_path) ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <span>AI Studio</span>
        <% end %>
      </div>
    </div>

    <!-- Operations -->
    <div>
      <p class="px-4 mb-3 text-[10px] font-bold text-muted-foreground uppercase tracking-widest">Operations</p>
      <div class="space-y-1">
        <%= link_to orders_path, class: "nav-link #{current_page?(orders_path) ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <span class="flex-1">Orders</span>
          <span class="px-2 py-0.5 text-[10px] font-bold bg-secondary text-foreground rounded-full"><%= current_tenant.orders.count %></span>
        <% end %>

        <%= link_to customers_path, class: "nav-link #{current_page?(customers_path) ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span>Customers</span>
        <% end %>
      </div>
    </div>

    <!-- Growth -->
    <div>
      <p class="px-4 mb-3 text-[10px] font-bold text-muted-foreground uppercase tracking-widest">Growth</p>
      <div class="space-y-1">
        <%= link_to reports_path, class: "nav-link #{current_page?(reports_path) ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <span>Reports</span>
        <% end %>

        <%= link_to settings_path, class: "nav-link #{current_page?(settings_path) ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span>Settings</span>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- User Profile -->
  <div class="p-4 border-t border-border">
    <div class="card p-4">
      <div class="flex items-center gap-3 mb-4">
        <div class="avatar w-10 h-10 text-sm">
          <%= current_tenant.name.first rescue 'U' %>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-semibold text-foreground truncate"><%= current_tenant.name %></p>
        </div>
      </div>
      
      <%= button_to destroy_tenant_session_path, method: :delete, class: "w-full btn-secondary justify-center gap-2 text-xs py-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        Sign Out
      <% end %>
    </div>
  </div>
</aside>
