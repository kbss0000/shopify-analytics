<!-- Sidebar -->
<aside class="fixed inset-y-0 left-0 z-50 w-72 bg-[#151516] backdrop-blur-xl border-r border-[#2E3035] flex flex-col transition-all duration-300 shadow-lg">
  <!-- Logo Area -->
  <div class="h-16 flex items-center px-6 border-b border-[#2E3035]">
    <%= link_to root_path, class: "flex items-center space-x-3 group" do %>
      <div class="relative w-8 h-8 bg-[#5E6AD2] rounded-md flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      <div class="flex flex-col">
        <span class="text-base font-bold text-[#EEEFF1] tracking-tight">XenoInsights</span>
      </div>
    <% end %>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-8 space-y-2 overflow-y-auto no-scrollbar">
    <div class="px-4 mb-2 text-xs font-bold text-[#8A8F98] uppercase tracking-wider">Overview</div>
    
    <!-- Dashboard Active State -->
    <%= link_to dashboard_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 #{current_page?(dashboard_path) ? 'bg-[#5E6AD2]/20 text-[#EEEFF1] border-l-2 border-[#5E6AD2]' : 'text-[#8A8F98] hover:bg-[#1A1B1E] hover:text-[#EEEFF1]'}" do %>
      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
      </svg>
      Dashboard
    <% end %>

    <%= link_to ai_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 #{current_page?(ai_path) ? 'bg-[#5E6AD2]/20 text-[#EEEFF1] border-l-2 border-[#5E6AD2]' : 'text-[#8A8F98] hover:bg-[#1A1B1E] hover:text-[#EEEFF1]'}" do %>
      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
      </svg>
      AI Studio
    <% end %>

    <div class="px-4 mt-8 mb-2 text-xs font-bold text-[#8A8F98] uppercase tracking-wider">Operations</div>

    <%= link_to orders_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 #{current_page?(orders_path) ? 'bg-[#5E6AD2]/20 text-[#EEEFF1] border-l-2 border-[#5E6AD2]' : 'text-[#8A8F98] hover:bg-[#1A1B1E] hover:text-[#EEEFF1]'}" do %>
      <svg class="w-4 h-4 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
      </svg>
      <span class="flex-1">Orders</span>
      <span class="ml-auto bg-[#5E6AD2] text-white text-[10px] font-bold px-2 py-0.5 rounded-full min-w-[24px] text-center"><%= current_tenant.orders.count %></span>
    <% end %>

    <%= link_to customers_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 #{current_page?(customers_path) ? 'bg-[#5E6AD2]/20 text-[#EEEFF1] border-l-2 border-[#5E6AD2]' : 'text-[#8A8F98] hover:bg-[#1A1B1E] hover:text-[#EEEFF1]'}" do %>
      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
      </svg>
      Customers
    <% end %>

    <div class="px-4 mt-8 mb-2 text-xs font-bold text-[#8A8F98] uppercase tracking-wider">Growth</div>

    <%= link_to reports_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 #{current_page?(reports_path) ? 'bg-[#5E6AD2]/20 text-[#EEEFF1] border-l-2 border-[#5E6AD2]' : 'text-[#8A8F98] hover:bg-[#1A1B1E] hover:text-[#EEEFF1]'}" do %>
      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
      </svg>
      Reports
    <% end %>

    <%= link_to settings_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 #{current_page?(settings_path) ? 'bg-[#5E6AD2]/20 text-[#EEEFF1] border-l-2 border-[#5E6AD2]' : 'text-[#8A8F98] hover:bg-[#1A1B1E] hover:text-[#EEEFF1]'}" do %>
      <svg class="w-4 h-4 mr-3 transition-transform group-hover:rotate-90 duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
      </svg>
      Settings
    <% end %>
  </nav>

  <!-- User / Actions -->
  <div class="p-6 border-t border-[#2E3035]">
    <div class="bg-[#1A1B1E] rounded-xl p-4 border border-[#2E3035] shadow-md hover:shadow-lg transition-all duration-200">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center space-x-3 flex-1 min-w-0">
          <div class="relative flex-shrink-0">
            <div class="h-10 w-10 rounded-lg bg-[#5E6AD2] flex items-center justify-center text-sm font-bold text-white ring-2 ring-[#151516]">
              <%= current_tenant.name.first rescue 'U' %>
            </div>
            <div class="absolute -bottom-0.5 -right-0.5 w-3 h-3 bg-[#5E6AD2] rounded-full border-2 border-[#151516]"></div>
          </div>
          <div class="overflow-hidden flex-1 min-w-0">
            <p class="text-sm font-semibold text-[#EEEFF1] truncate"><%= current_tenant.name %></p>
            <div class="flex items-center space-x-2 mt-0.5">
              <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-[#5E6AD2]/20 border border-[#5E6AD2]/30 text-[10px] font-bold text-[#5E6AD2]">
                <svg class="w-2.5 h-2.5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Pro Plan
              </span>
            </div>
          </div>
        </div>
        <%= link_to settings_path, class: "flex-shrink-0 p-2 text-[#8A8F98] hover:text-[#5E6AD2] hover:bg-[#1A1B1E] rounded-lg transition-all duration-200 group" do %>
          <svg class="w-4 h-4 transition-transform group-hover:rotate-90 duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
          </svg>
        <% end %>
      </div>
      <%= button_to destroy_tenant_session_path, method: :delete, class: "w-full flex items-center justify-center space-x-2 px-4 py-2.5 text-xs font-semibold text-[#EEEFF1] hover:text-white bg-[#222326] hover:bg-[#5E6AD2] rounded-lg transition-all duration-200 shadow-sm hover:shadow-md transform hover:scale-[1.02] border border-[#2E3035]" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        <span>Sign Out</span>
      <% end %>
    </div>
  </div>
</aside>
