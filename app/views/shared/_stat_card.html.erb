<%# Stat Card Component %>
<div class="bg-card/80 backdrop-blur-md rounded-xl border border-border/50 p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:bg-card/90">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-medium text-muted-foreground"><%= label %></p>
      <h3 class="text-2xl font-bold text-card-foreground mt-2"><%= value %></h3>
    </div>
    <div class="p-2 bg-[#5E6AD2]/20 rounded-md text-[#5E6AD2] border border-[#5E6AD2]/30">
      <%= icon %>
    </div>
  </div>
  
  <% if local_assigns[:trend] %>
    <div class="flex items-center mt-4 text-xs">
      <% if trend_up %>
        <span class="text-[#5E6AD2] flex items-center font-medium">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <%= trend %>
        </span>
      <% else %>
        <span class="text-destructive flex items-center font-medium">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"/>
          </svg>
          <%= trend %>
        </span>
      <% end %>
      <span class="text-muted-foreground ml-2">vs last month</span>
    </div>
  <% end %>
</div>
