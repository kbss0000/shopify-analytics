<% if flash.any? %>
  <div class="fixed top-4 right-4 z-[60] flex flex-col gap-3 w-full max-w-sm pointer-events-none" data-controller="flash">
    <% flash.each do |type, message| %>
      <div class="pointer-events-auto animate-slide-down" data-flash-target="message">
        <% if type == 'notice' || type == 'success' %>
          <div class="flex items-center p-4 text-sm text-foreground border border-primary/30 rounded-xl bg-primary/10 shadow-lg backdrop-blur-sm" role="alert">
            <svg class="flex-shrink-0 inline w-4 h-4 mr-3 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div class="flex-1"><%= message %></div>
            <button type="button" data-action="click->flash#dismiss" class="ml-3 text-primary hover:text-primary/80 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        <% elsif type == 'alert' || type == 'error' %>
          <div class="flex items-center p-4 text-sm text-destructive border border-destructive/30 rounded-xl bg-destructive/10 shadow-lg backdrop-blur-sm" role="alert">
            <svg class="flex-shrink-0 inline w-4 h-4 mr-3 text-destructive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div class="flex-1"><%= message %></div>
            <button type="button" data-action="click->flash#dismiss" class="ml-3 text-destructive hover:text-destructive/80 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        <% else %>
          <div class="flex items-center p-4 text-sm text-foreground border border-border rounded-xl bg-card shadow-lg backdrop-blur-sm" role="alert">
            <svg class="flex-shrink-0 inline w-4 h-4 mr-3 text-muted-foreground" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <div class="flex-1"><%= message %></div>
            <button type="button" data-action="click->flash#dismiss" class="ml-3 text-muted-foreground hover:text-foreground transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
