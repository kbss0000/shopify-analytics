<!-- Header -->
<header class="sticky top-0 z-30 bg-background/80 backdrop-blur-xl border-b border-border">
  <div class="px-6 lg:px-8 py-4 flex items-center justify-between">
    
    <!-- Left -->
    <div class="flex items-center gap-4">
      <!-- Mobile Menu -->
      <button data-action="click->sidebar#open" class="lg:hidden btn-ghost p-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

      <!-- Title -->
      <div>
        <h1 class="text-xl font-bold text-foreground tracking-tight">
          <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %>
        </h1>
        <p class="text-xs text-muted-foreground font-medium mt-1">
          <%= content_for?(:page_subtitle) ? yield(:page_subtitle) : "Analytics overview" %>
        </p>
      </div>
    </div>
    
    <!-- Right -->
    <div class="flex items-center gap-4">
      <% unless current_tenant.shopify_connected? %>
        <%= link_to shopify_onboarding_path, class: "btn-primary text-xs py-2" do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          Connect Store
        <% end %>
      <% end %>
    </div>
  </div>
</header>
