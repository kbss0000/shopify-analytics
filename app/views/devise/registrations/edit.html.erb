<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Account Settings</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, "Store Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, autofocus: true,
            class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autocomplete: "email",
            class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500",
            placeholder: "Leave blank if you don't want to change it" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :current_password, autocomplete: "current-password",
            class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500",
            placeholder: "We need your current password to confirm changes" %>
      </div>

      <div class="flex justify-between items-center pt-6 border-t">
        <div>
          <%= link_to "Cancel", dashboard_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
          <%= f.submit "Update Account", class: "ml-3 px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 cursor-pointer" %>
        </div>
        
        <%= button_to "Delete Account", registration_path(resource_name), 
            data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action cannot be undone." },
            class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
      </div>
    <% end %>
  </div>
</div>
