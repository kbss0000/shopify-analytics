<div class="max-w-md w-full bg-card border border-border rounded-xl p-8 shadow-sm relative z-10">
  <!-- Logo/Brand -->
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-12 h-12 bg-primary rounded-xl mb-6 shadow-sm">
      <svg class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    </div>
    <h2 class="text-2xl font-bold text-card-foreground tracking-tight">
      Create Account
    </h2>
    <p class="mt-2 text-sm text-muted-foreground">
      Start your analytics journey
    </p>
  </div>

  <!-- Signup Form -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-4">
      <div>
        <%= f.label :name, "Store Name", class: "block text-xs font-semibold text-muted-foreground mb-1.5 uppercase tracking-wider" %>
        <%= f.text_field :name, autofocus: true, 
            class: "block w-full px-4 py-3 bg-muted border border-border rounded-lg text-foreground text-sm placeholder-muted-foreground focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 indent-1",
            placeholder: "Your Store Name" %>
      </div>

      <div>
        <%= f.label :email, "Email Address", class: "block text-xs font-semibold text-muted-foreground mb-1.5 uppercase tracking-wider" %>
        <%= f.email_field :email, autocomplete: "email",
            class: "block w-full px-4 py-3 bg-muted border border-border rounded-lg text-foreground text-sm placeholder-muted-foreground focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 indent-1",
            placeholder: "name@company.com" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :password, "Password", class: "block text-xs font-semibold text-muted-foreground mb-1.5 uppercase tracking-wider" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "block w-full px-4 py-3 bg-muted border border-border rounded-lg text-foreground text-sm placeholder-muted-foreground focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 indent-1",
              placeholder: "Min 6 chars" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm", class: "block text-xs font-semibold text-muted-foreground mb-1.5 uppercase tracking-wider" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "block w-full px-4 py-3 bg-muted border border-border rounded-lg text-foreground text-sm placeholder-muted-foreground focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 indent-1",
              placeholder: "Confirm" %>
        </div>
      </div>
    </div>

    <%= f.submit "Create Account", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-primary-foreground bg-primary hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-background focus:ring-primary transition-all duration-200 transform hover:scale-[1.01] cursor-pointer" %>
  <% end %>

  <div class="mt-8 text-center pt-6 border-t border-border">
    <p class="text-sm text-muted-foreground">
      Already have an account?
      <%= link_to "Sign in", new_tenant_session_path, class: "text-primary font-medium hover:text-primary/80 ml-1 transition-all" %>
    </p>
  </div>
</div>
