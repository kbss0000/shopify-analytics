<!-- Login Card -->
<div class="glass-card p-8 w-full animate-scale-in">
  
  <!-- Header -->
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-14 h-14 bg-gradient-to-br from-primary to-primary/80 rounded-2xl mb-5 shadow-glow">
      <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-foreground tracking-tight">Welcome back</h1>
    <p class="text-sm text-muted-foreground mt-2">Sign in to your analytics dashboard</p>
  </div>

  <!-- Demo Credentials -->
  <div class="mb-6 p-4 bg-primary/5 border border-primary/20 rounded-xl">
    <div class="flex items-center gap-2 mb-3">
      <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span class="text-xs font-bold text-primary uppercase tracking-wider">Demo Credentials</span>
    </div>
    <div class="space-y-2">
      <div class="flex items-center justify-between">
        <span class="text-sm text-muted-foreground">Email</span>
        <code class="px-3 py-1.5 bg-secondary border border-border rounded-lg text-sm font-mono text-foreground">demo@example.com</code>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-sm text-muted-foreground">Password</span>
        <code class="px-3 py-1.5 bg-secondary border border-border rounded-lg text-sm font-mono text-foreground">password123</code>
      </div>
    </div>
  </div>

  <!-- Form -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :email, "Email Address", class: "block text-xs font-semibold text-muted-foreground mb-2 uppercase tracking-wider" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "input-field",
            placeholder: "name@company.com" %>
      </div>
      
      <div>
        <div class="flex items-center justify-between mb-2">
          <%= f.label :password, "Password", class: "text-xs font-semibold text-muted-foreground uppercase tracking-wider" %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-xs text-primary hover:text-primary/80 font-medium transition-colors" %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "input-field",
            placeholder: "Enter your password" %>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <%= f.check_box :remember_me, class: "w-4 h-4 rounded bg-secondary border-border text-primary focus:ring-primary focus:ring-offset-0 cursor-pointer" %>
      <%= f.label :remember_me, class: "text-sm text-muted-foreground cursor-pointer select-none" do %>
        Remember me for 30 days
      <% end %>
    </div>

    <%= f.submit "Sign In", class: "w-full btn-primary py-3.5 text-sm font-bold cursor-pointer" %>
  <% end %>

  <!-- Footer -->
  <div class="mt-8 pt-6 border-t border-border text-center">
    <p class="text-sm text-muted-foreground">
      Don't have an account?
      <%= link_to "Create one", new_tenant_registration_path, class: "text-primary font-semibold hover:text-primary/80 ml-1 transition-colors" %>
    </p>
  </div>
</div>
