<div class="max-w-md w-full bg-card border border-border rounded-xl p-8 shadow-sm relative z-10">
  <!-- Logo/Brand -->
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-12 h-12 bg-primary rounded-xl mb-6 shadow-sm">
      <svg class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    </div>
    <h2 class="text-2xl font-bold text-card-foreground tracking-tight">
      Welcome back
    </h2>
    <p class="mt-2 text-sm text-muted-foreground">
      Sign in to manage your analytics
    </p>
  </div>

  <!-- Demo Credentials -->
  <div class="mb-6 p-4 bg-[#5E6AD2]/10 border border-[#5E6AD2]/30 rounded-lg">
    <p class="text-xs font-semibold text-[#5E6AD2] uppercase tracking-wider mb-2">Demo Credentials</p>
    <div class="space-y-1.5 text-sm">
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">Email:</span>
        <code class="px-2 py-1 bg-[#151516] border border-[#2E3035] rounded text-[#EEEFF1] font-mono text-xs">demo@example.com</code>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">Password:</span>
        <code class="px-2 py-1 bg-[#151516] border border-[#2E3035] rounded text-[#EEEFF1] font-mono text-xs">password123</code>
      </div>
    </div>
  </div>

  <!-- Login Form -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :email, "Email Address", class: "block text-xs font-semibold text-muted-foreground mb-1.5 uppercase tracking-wider" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "block w-full px-4 py-3 bg-muted border border-border rounded-lg text-foreground text-sm placeholder-muted-foreground focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 indent-1",
            placeholder: "name@company.com" %>
        <!-- Mock value for demo -->
      </div>
      
      <div>
        <div class="flex items-center justify-between mb-1.5">
          <%= f.label :password, "Password", class: "block text-xs font-semibold text-muted-foreground uppercase tracking-wider" %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-xs text-primary hover:text-primary/80 transition-colors" %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "block w-full px-4 py-3 bg-muted border border-border rounded-lg text-foreground text-sm placeholder-muted-foreground focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 indent-1",
            placeholder: "••••••••" %>
      </div>
    </div>

    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "w-4 h-4 rounded bg-muted border-border text-primary focus:ring-primary focus:ring-offset-0 transition-all cursor-pointer" %>
      <%= f.label :remember_me, class: "ml-2 text-sm text-muted-foreground cursor-pointer select-none" do %>
        Remember me
      <% end %>
    </div>

    <%= f.submit "Sign In", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-primary-foreground bg-primary hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-background focus:ring-primary transition-all duration-200 transform hover:scale-[1.01] cursor-pointer" %>
  <% end %>

  <div class="mt-8 text-center pt-6 border-t border-border">
    <p class="text-sm text-muted-foreground">
      Don't have an account?
      <%= link_to "Create account", new_tenant_registration_path, class: "text-primary font-medium hover:text-primary/80 ml-1 transition-all" %>
    </p>
  </div>
</div>
