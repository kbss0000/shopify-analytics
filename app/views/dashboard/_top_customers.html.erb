<!-- Top Customers List (Span 1) -->
<div class="bg-card/80 backdrop-blur-md border border-border/50 rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
  <h2 class="text-lg font-bold text-card-foreground tracking-tight mb-6"><%= t('dashboard.vip_customers', default: 'VIP Customers') %></h2>
  
  <div class="space-y-6">
    <% if @stats[:top_customers].any? %>
      <% @stats[:top_customers].take(5).each_with_index do |customer, index| %>
        <div class="flex items-center justify-between group">
          <div class="flex items-center space-x-4">
            <div class="relative">
                <div class="h-10 w-10 rounded-full bg-muted border border-border flex items-center justify-center text-xs font-bold text-foreground group-hover:border-primary transition-colors">
                <%= customer.first_name&.first || '?' %><%= customer.last_name&.first || '?' %>
              </div>
              <% if index == 0 %>
                <div class="absolute -top-1 -right-1 w-4 h-4 bg-primary rounded-full flex items-center justify-center border-2 border-card">
                    <svg class="w-2 h-2 text-primary-foreground" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                </div>
              <% end %>
            </div>
            
            <div>
              <p class="text-sm font-medium text-foreground group-hover:text-primary transition-colors"><%= customer.full_name %></p>
              <p class="text-xs text-muted-foreground"><%= customer.email %></p>
            </div>
          </div>
          <p class="text-sm font-bold text-foreground font-mono"><%= format_currency(customer.total_spent) %></p>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
        </div>
        <p class="text-muted-foreground text-sm"><%= t('dashboard.waiting_for_customers', default: 'Waiting for customers...') %></p>
      </div>
    <% end %>
  </div>
</div>
