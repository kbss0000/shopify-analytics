<!-- Recent Orders -->
<div class="card overflow-hidden animate-slide-up" style="animation-delay: 0.1s;">
  <div class="px-6 py-5 border-b border-border flex items-center justify-between">
    <div>
      <h2 class="section-title"><%= t('dashboard.recent_orders', default: 'Recent Orders') %></h2>
      <p class="section-subtitle mt-1">Latest transactions</p>
    </div>
    <%= link_to orders_path, class: "btn-ghost text-xs gap-1" do %>
      View All
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    <% end %>
  </div>
  
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="bg-secondary/50">
          <th class="px-6 py-4 text-left table-header">Order ID</th>
          <th class="px-6 py-4 text-left table-header">Customer</th>
          <th class="px-6 py-4 text-left table-header">Date</th>
          <th class="px-6 py-4 text-left table-header">Amount</th>
          <th class="px-6 py-4 text-right table-header">Status</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-border">
        <% @recent_orders.each do |order| %>
          <tr class="hover:bg-secondary/30 transition-colors duration-200">
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-primary">#<%= order.shopify_id %></span>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-3">
                <div class="avatar w-8 h-8 text-[10px]">
                  <%= order.customer&.first_name&.first || 'G' %>
                </div>
                <span class="table-cell font-medium"><%= order.customer&.full_name || "Guest" %></span>
              </div>
            </td>
            <td class="px-6 py-4">
              <span class="table-cell text-muted-foreground"><%= format_datetime(order.placed_at) %></span>
            </td>
            <td class="px-6 py-4">
              <span class="table-cell font-bold"><%= format_currency(order.total_price) %></span>
            </td>
            <td class="px-6 py-4 text-right">
              <span class="badge-primary">
                <span class="status-dot w-1.5 h-1.5"></span>
                <%= order.status&.capitalize || 'Pending' %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @recent_orders.empty? %>
    <div class="flex flex-col items-center justify-center py-16 text-center">
      <div class="w-16 h-16 bg-secondary rounded-2xl flex items-center justify-center mb-4 border border-border">
        <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
      </div>
      <p class="text-sm font-medium text-foreground mb-1">No orders yet</p>
      <p class="text-xs text-muted-foreground">Orders will appear here once customers start purchasing</p>
    </div>
  <% end %>
</div>
