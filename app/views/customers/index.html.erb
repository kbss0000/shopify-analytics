<% content_for :page_title, "Customers" %>
<% content_for :page_subtitle, "View and manage your customer base" %>

<div class="space-y-8">
  <!-- Customers Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% current_tenant.customers.order(total_spent_cents: :desc).limit(12).each do |customer| %>
      <div class="card-hover p-6 relative overflow-hidden group">
        <!-- Background Icon -->
        <div class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition-opacity">
          <svg class="w-24 h-24 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        
        <div class="relative z-10">
          <!-- Avatar -->
          <div class="avatar w-12 h-12 text-lg mb-4">
            <%= customer.first_name&.first %><%= customer.last_name&.first %>
          </div>
          
          <!-- Info -->
          <h3 class="text-base font-bold text-foreground"><%= customer.full_name %></h3>
          <p class="text-sm text-muted-foreground mb-4 truncate"><%= customer.email %></p>
          
          <!-- Stats -->
          <div class="grid grid-cols-2 gap-4 pt-4 border-t border-border">
            <div>
              <p class="section-subtitle">Spent</p>
              <p class="text-sm font-bold text-foreground"><%= format_currency(customer.total_spent) %></p>
            </div>
            <div>
              <p class="section-subtitle">Orders</p>
              <p class="text-sm font-bold text-foreground"><%= customer.orders.count %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if current_tenant.customers.empty? %>
    <div class="card p-12 text-center">
      <div class="w-16 h-16 bg-secondary rounded-2xl flex items-center justify-center mx-auto mb-4 border border-border">
        <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <p class="text-base font-semibold text-foreground mb-1">No customers yet</p>
      <p class="text-sm text-muted-foreground">Connect your Shopify store to see customers</p>
    </div>
  <% end %>
</div>